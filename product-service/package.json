{
  "name": "product-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/app.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio --config ./drizzle.dev.config.ts",
    "db:push": "drizzle-kit push --force",
    "db:push:local": "drizzle-kit push --force --config ./drizzle.dev.config.ts",
    "db:push:test": "drizzle-kit push --force --config ./drizzle.test.config.ts",
    "db:studio:docker": "docker-compose exec product-service npm run db:studio",
    "build": "tsc",
    "test:setup": "npm run db:push:test",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "npm run test:setup && vitest run --coverage",
    "test:run": "npm run test:setup && vitest run",
    "test:ui": "npm run test:setup && vitest --ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "bcrypt": "^6.0.0",
    "consul": "^2.0.1",
    "cors": "^2.8.5",
    "custom-env": "^2.0.6",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.1.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.7",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
