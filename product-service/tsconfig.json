{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "types": ["node"],
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": false,
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
