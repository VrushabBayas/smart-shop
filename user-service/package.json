{
  "name": "user-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/app.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push --force",
    "db:push:test": "NODE_ENV=test drizzle-kit push --force",
    "db:studio:docker": "docker-compose exec user-service npm run db:studio",
    "build": "tsc",
    "test:setup": "npm run db:push:test",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "npm run test:setup && vitest run --coverage",
    "test:run": "npm run test:setup && vitest run",
    "test:ui": "npm run test:setup && vitest --ui"
  },
  "keywords": [],
